<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginregistro.RegistrarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/textRegistrarValidContra"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textRegistrarUsuario"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="@+id/textRegistrarUsuario"
            app:layout_constraintTop_toBottomOf="@+id/textRegistrarUsuario"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/textRegistrarUsuario"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.104" />

        <EditText
            android:id="@+id/textRegistrarContra"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/textRegistrarUsuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.864"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textRegistrarUsuario"
            app:layout_constraintVertical_bias="0.005" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:tag="fragmentRegistrar"
            android:text="@string/contrasena"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/textRegistrarContra"
            app:layout_constraintStart_toStartOf="@+id/textRegistrarContra" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/repite_contrasena"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/textRegistrarValidContra"
            app:layout_constraintStart_toStartOf="@+id/textRegistrarValidContra" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:tag="fragmentRegistrar"
            android:text="@string/nombre_usuario"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/textRegistrarUsuario"
            app:layout_constraintStart_toStartOf="@+id/textRegistrarUsuario" />

        <Button
            android:id="@+id/botonRegistrar"
            android:layout_width="81dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/fondo_fragment"
            android:text="@string/registrar"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textRegistrarValidContra"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="@+id/textRegistrarValidContra"
            app:layout_constraintTop_toBottomOf="@+id/textRegistrarValidContra"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titan_one"
            android:text="@string/registrar"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.219" />

        <ImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:src="@android:drawable/ic_menu_myplaces"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.777"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textRegistrarContra"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foto_perfil"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/fotoPerfil"
            app:layout_constraintEnd_toEndOf="@+id/fotoPerfil"
            app:layout_constraintHorizontal_bias="0.655"
            app:layout_constraintStart_toStartOf="@+id/fotoPerfil" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>